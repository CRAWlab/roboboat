<launch>

	<!-- For using UUV Gazebo -->
	<arg name="world_pkg" default="uuv_gazebo_worlds" />
	<!-- Alternative filenames:
		1) lake.launch
	-->
	<arg name="world_pkg_file" default="ocean_waves.launch" />

	<!-- For using VRX Gazebo Sandisland -->
	<arg name="world" default="$(find vrx_gazebo)/worlds/example_course.world"/>


	<arg name="world_file" default="0" />
	<arg name="use_pkg_path" default="1" />
	<arg name="gui" default="false" />

	<!-- BA: Not quite sure what this is used for. Log files? -->
	<arg name="hydro_debug" default="0" />
	<!-- Adjust this if additional configurations are explored in
	roboboat/roboboat_description/urdf/configs -->
	<arg name="config" default="base" />
	<arg name="namespace" default="" />

	<!-- Load a world file in Gazebo -->
	<group unless="$(arg use_pkg_path)">
		<include file="(arg world_file">
			<arg name="gui" value="$(arg gui)" />
		</include>
	</group>

	<!-- For UUV Gazebo -->
	<!--
	<group if="$(arg use_pkg_path)">
    	<include file="$(eval find(arg('world_pkg')) + '/launch' + 	arg('world_pkg_file'))" >
      		<arg name="gui" value="$(arg gui)" />
    	</include>
  	</group>
	-->

	<!-- For VRX Gazebo -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
	    <arg name="world_name"   value="$(arg world)"/>
	    <arg name="use_sim_time" value="true"/>
	    <arg name="gui"          value="$(arg gui)" />
  	</include>

  	<!-- Simulate a RoboBoat -->
  	<include file="$(find roboboat_gazebo)/launch/roboboat_sim.launch">
  		<arg name="namespace" value="$(arg namespace)" />
  	</include>

</launch>
